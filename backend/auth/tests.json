{
  "tests": [
    {
      "name": "Login with correct credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "username": "admin",
        "password": "admin654654"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string",
        "username": "admin"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with wrong credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "username": "admin",
        "password": "wrong"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify valid token",
      "method": "POST", 
      "body": {
        "action": "verify",
        "token": "valid_token_here"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "valid": true
      },
      "bodyMatcher": "partial"
    }
  ]
}